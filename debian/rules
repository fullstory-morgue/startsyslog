#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk

install/startsyslog-sidux::
	mkdir -p debian/startsyslog-sidux/usr/share/pixmaps
	convert icons/hicolor/32x32/apps/sidux-syslog.png \
		debian/startsyslog-sidux/usr/share/pixmaps/startsyslog-sidux.xpm
	convert icons/hicolor/16x16/apps/sidux-syslog.png \
		debian/startsyslog-sidux/usr/share/pixmaps/startsyslog-sidux-16.xpm
